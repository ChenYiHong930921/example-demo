<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chenyihong.exampledemo.view.GradientLineChart
            android:id="@+id/glc_chart_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.chenyihong.exampledemo.view.ShadowView
            android:id="@+id/v_shadow_test_shadow_layer"
            android:layout_width="82dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/glc_chart_view"
            app:roundRadiusHalfHeight="true"
            app:viewShape="half_rectangle" />

        <View
            android:id="@+id/v_shadow_test_outline"
            android:layout_width="82dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:elevation="4dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_shadow_test_shadow_layer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>