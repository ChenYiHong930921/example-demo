<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_title"
        layout="@layout/layout_title" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open_device_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="open device example"
        app:layout_constraintEnd_toStartOf="@id/btn_open_app_example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open_app_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open app example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_open_device_example"
        app:layout_constraintTop_toTopOf="@id/btn_open_device_example" />
</androidx.constraintlayout.widget.ConstraintLayout>