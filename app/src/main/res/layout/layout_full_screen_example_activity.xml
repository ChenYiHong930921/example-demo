<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="FullScreenApi"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="FullScreen"
            app:layout_constraintEnd_toStartOf="@id/btn_immersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <Button
            android:id="@+id/btn_immersion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Immersion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_full_screen"
            app:layout_constraintTop_toTopOf="@id/btn_full_screen" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>